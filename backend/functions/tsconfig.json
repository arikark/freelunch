{
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },

  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
